<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.hw.config.mapper.PermissionMapper">

    <select id="selectPermissionByRoleId" resultType="cn.hw.domain.system.SysPermission">
        SELECT
            sp.*
        FROM
            sys_permission sp
                LEFT JOIN sys_role_permission srp ON srp.permission_id = sp.id
        WHERE 1=1
          AND srp.role_id = #{roleId}

    </select>
</mapper>
